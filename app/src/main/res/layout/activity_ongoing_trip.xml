<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#25282E"
    tools:context=".OngoingTripActivity">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:textAlignment="center"
        android:textColor="#FEF7E8"
        android:textSize="30sp"
        tools:text="Estimated time : 40 mins" />

    <TextView
        android:id="@+id/tvExactTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textColor="#FEF7E8"
        android:textSize="30sp"
        tools:text="@string/estimated_arrival" />

    <Button
        android:id="@+id/btnEndTrip"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="188dp"
        android:background="#FEF7E8"
        android:text="End trip"
        android:textColor="#25282E"
        android:textSize="30sp" />

</RelativeLayout>